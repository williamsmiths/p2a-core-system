{
  "info": {
    "name": "P2A ASEAN Core System API",
    "description": "API collection cho P2A ASEAN Core System - Hệ thống quản lý người dùng và xác thực",
    "version": "1.0.0",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000/api",
      "type": "string"
    },
    {
      "key": "accessToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "refreshToken",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health Check",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/health",
              "host": ["{{baseUrl}}"],
              "path": ["health"]
            },
            "description": "Kiểm tra trạng thái service"
          },
          "response": []
        }
      ],
      "description": "Endpoints để kiểm tra trạng thái hệ thống"
    },
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"Password123\",\n  \"role\": \"student\",\n  \"fullName\": \"Nguyễn Văn A\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "register"]
            },
            "description": "Đăng ký tài khoản mới"
          },
          "response": []
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"Password123\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            },
            "description": "Đăng nhập vào hệ thống"
          },
          "response": []
        },
        {
          "name": "Verify Email (POST)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"token\": \"verification_token_here\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/auth/verify-email",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "verify-email"]
            },
            "description": "Xác thực email bằng token"
          },
          "response": []
        },
        {
          "name": "Verify Email (GET)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/auth/verify-email?token=verification_token_here",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "verify-email"],
              "query": [
                {
                  "key": "token",
                  "value": "verification_token_here"
                }
              ]
            },
            "description": "Xác thực email qua link từ email"
          },
          "response": []
        },
        {
          "name": "Resend Verification Email",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/auth/resend-verification",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "resend-verification"]
            },
            "description": "Gửi lại email xác thực"
          },
          "response": []
        },
        {
          "name": "Refresh Token",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refreshToken\": \"{{refreshToken}}\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/auth/refresh",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "refresh"]
            },
            "description": "Làm mới access token"
          },
          "response": []
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refreshToken\": \"{{refreshToken}}\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/auth/logout",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "logout"]
            },
            "description": "Đăng xuất khỏi hệ thống"
          },
          "response": []
        }
      ],
      "description": "Các endpoint liên quan đến xác thực và đăng nhập"
    },
    {
      "name": "Users",
      "item": [
        {
          "name": "Get My Profile",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/users/me",
              "host": ["{{baseUrl}}"],
              "path": ["users", "me"]
            },
            "description": "Lấy thông tin profile của user hiện tại"
          },
          "response": []
        },
        {
          "name": "Update My Profile",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"fullName\": \"Nguyễn Văn B\",\n  \"avatarUrl\": \"https://example.com/avatar.jpg\",\n  \"phoneNumber\": \"+84901234567\",\n  \"country\": \"Vietnam\",\n  \"city\": \"Ho Chi Minh City\",\n  \"bio\": \"Sinh viên năm 3 ngành Công nghệ thông tin\",\n  \"dateOfBirth\": \"2000-01-01\",\n  \"gender\": \"male\",\n  \"linkedinUrl\": \"https://linkedin.com/in/nguyenvana\",\n  \"websiteUrl\": \"https://nguyenvana.com\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/users/me",
              "host": ["{{baseUrl}}"],
              "path": ["users", "me"]
            },
            "description": "Cập nhật profile của user hiện tại"
          },
          "response": []
        },
        {
          "name": "Change Password",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"currentPassword\": \"OldPassword123\",\n  \"newPassword\": \"NewPassword123\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/users/me/change-password",
              "host": ["{{baseUrl}}"],
              "path": ["users", "me", "change-password"]
            },
            "description": "Đổi mật khẩu của user hiện tại"
          },
          "response": []
        },
        {
          "name": "Get User by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/users/:id",
              "host": ["{{baseUrl}}"],
              "path": ["users", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "user_id_here"
                }
              ]
            },
            "description": "Lấy thông tin user theo ID"
          },
          "response": []
        },
        {
          "name": "Get All Users (Admin Only)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/users?page=1&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["users"],
              "query": [
                {
                  "key": "page",
                  "value": "1",
                  "description": "Số trang (mặc định: 1)"
                },
                {
                  "key": "limit",
                  "value": "10",
                  "description": "Số lượng items per page (mặc định: 10)"
                }
              ]
            },
            "description": "Lấy danh sách tất cả users (chỉ dành cho admin)"
          },
          "response": []
        },
        {
          "name": "Deactivate User (Admin Only)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/users/:id/deactivate",
              "host": ["{{baseUrl}}"],
              "path": ["users", ":id", "deactivate"],
              "variable": [
                {
                  "key": "id",
                  "value": "user_id_here"
                }
              ]
            },
            "description": "Khóa tài khoản user (chỉ dành cho admin)"
          },
          "response": []
        },
        {
          "name": "Activate User (Admin Only)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/users/:id/activate",
              "host": ["{{baseUrl}}"],
              "path": ["users", ":id", "activate"],
              "variable": [
                {
                  "key": "id",
                  "value": "user_id_here"
                }
              ]
            },
            "description": "Kích hoạt lại tài khoản user (chỉ dành cho admin)"
          },
          "response": []
        }
      ],
      "description": "Các endpoint quản lý người dùng"
    }
  ],
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Auto-set access token from login response",
          "if (pm.response && pm.response.json() && pm.response.json().data && pm.response.json().data.accessToken) {",
          "    pm.collectionVariables.set('accessToken', pm.response.json().data.accessToken);",
          "}",
          "",
          "if (pm.response && pm.response.json() && pm.response.json().data && pm.response.json().data.refreshToken) {",
          "    pm.collectionVariables.set('refreshToken', pm.response.json().data.refreshToken);",
          "}"
        ]
      }
    }
  ]
}
